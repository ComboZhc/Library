{% block script %}
	<script type="text/javascript">
		$(document).ready(function(){
			$("div.delete a").click(function(event){
				if (confirm("确定要删除这条充值记录?"))
					return true;
				else
					return false;
			});
			$("tr:odd").css("background-color", "#EDF3FE");
		});
	</script>
{% endblock %}
