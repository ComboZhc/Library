					<th>{{s.count}}</th>
					<th>{{s.member.name}}</th>
					<th>
						{%url sales.views.show s.id as u%}
						{%div_link u "查看" "" "show link"%}
					</th>
					<th>
						{%url sales.views.delete s.id as u%}
						{%div_link u "删除" "" "delete link"%}
					</th>
				</tr>
			{% endfor %}
		</tbody>
	</table>
